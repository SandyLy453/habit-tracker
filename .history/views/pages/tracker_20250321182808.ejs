<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/styles.css" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>
		<title>Habit Tracker</title>
	</head>
	<body>
		<%- include('../partials/header', { activePage: 'tracker' }) %>

		<main class="tracker-container">
			<section class="habit-form-section">
				<h1>Track Your Habits</h1>
				<form class="habit-form" action="/add-habit" method="POST">
    <input type="text" name="habitName" placeholder="Habit Name" required>
    <select name="frequency" required>
        <option value="" disabled selected>Select Frequency</option>
        <option value="daily">Daily</option>
        <option value="weekly">Weekly</option>
        <option value="monthly">Monthly</option>
    </select>
    <input type="number" name="duration" placeholder="Duration (in minutes)" required>
    <button type="submit">Add Habit</button>
</form>
			</section>

			<section class="habit-list-section">
				<h2>Your Habits</h2>
				<ul class="habit-list">
					<% habits.forEach(habit => { %>
					<li>
						<h3><%= habit.name %></h3>
						<p>Frequency: <%= habit.frequency %></p>
						<button class="delete-button">Delete</button>
					</li>
					<% }) %>
				</ul>
			</section>
		</main>

		<%- include('../partials/footer') %>
	</body>
</html>
